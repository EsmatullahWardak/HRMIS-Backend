generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  is_active Boolean  @default(true)
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  category    String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


model Loan {
  id               Int      @id @default(autoincrement())
  type             String   // "100$ Loan", "1 Month", "3 Month"
  amount           Float
  remaining        Float
  monthlyDeduction Float
  status           String   @default("Pending")
  issuedDate       DateTime @default(now())
  guarantor        String?
  notes            String?
  progress         Float    @default(0)
  userId           Int?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Leave {
  id          Int      @id @default(autoincrement())
  type        String   // "Sick", "Vacation", "Personal", etc.
  startDate   DateTime
  endDate     DateTime
  reason      String?
  status      String   @default("Pending")  // "Pending", "Approved", "Rejected"
  userId      Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
